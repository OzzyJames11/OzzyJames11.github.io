<div class="news">
  {% if site.certif != blank %}
    {% assign certif_size = site.certif | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.certif.scrollable and certif_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign certif = site.certif | reverse %}
        {% if include.limit and site.certif.limit %}
          {% assign certif_limit = site.certif.limit %}
        {% else %}
          {% assign certif_limit = certif_size %}
        {% endif %}
        {% for item in certif limit: certif_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No certifi so far...</p>
  {% endif %}
</div>
